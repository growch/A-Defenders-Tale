package events {	import flash.events.Event;	/**	 * @author Mark Grochowski	 */	public class ApplicationEvent extends Event
	{		public static const APP_DATA_LOADED : String = "app_data_loaded";		public static const INIT_VIEWS : String = "init_views";		public static const DATA_LOADED : String = "data_loaded";		public static const DISPLAY_ERROR : String = "display_error";				public static const TITLE_DONE : String = "title_done";		public static const APPLICATION_SUBMITTED:String = "application_submitted";		public static const CONNECT_TO_FACEBOOK:String = "connect_to_facebook";		public static const GO_TO_DOCKS:String = "go_to_docks";		public var data : Object;		private var _type : String;		private var _bubbles : Boolean;		private var _cancelable : Boolean;						public function ApplicationEvent(type : String, info : Object = null, bubbles : Boolean = false, cancelable : Boolean = false)		{			super( type, bubbles, cancelable );			data = info;			_type = type;			_bubbles = bubbles;			_cancelable = cancelable;		}		override public function clone() : Event		{			return new ApplicationEvent( _type, data, _bubbles, _cancelable );		} 		}}